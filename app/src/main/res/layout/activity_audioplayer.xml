<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@drawable/img_single_bg"
    android:layout_height="match_parent" >
    
<ImageView 
    android:layout_centerHorizontal="true"
    android:id="@+id/iv_icon"
    android:src="@drawable/now_playing_matrix_01"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
<TextView
    android:textColor="#ffffff" 
    android:layout_marginTop="40dp"
    android:text="艺术家"
    android:layout_centerHorizontal="true"
    android:id="@+id/tv_artist"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
<TextView 
    android:textColor="#ffffff"
    android:layout_marginTop="60dp"
    android:textSize="18sp"
    android:text="音乐文件名称"
    android:layout_centerHorizontal="true"
    android:id="@+id/tv_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>
<LinearLayout
    android:layout_alignParentBottom="true"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView 
    android:layout_gravity="right"
    android:textColor="#ffffff"
    android:layout_marginTop="60dp"
    android:textSize="18sp"
    android:text="1:30/5:30"
    android:layout_centerHorizontal="true"
    android:id="@+id/tv_name"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"/>

    <SeekBar
        android:id="@+id/seekbar_audio"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:maxHeight="2dp"
        android:minHeight="2dp"
        android:progressDrawable="@drawable/audio_progress_horizontal"
        android:thumb="@drawable/seek_thumb_normal" />
    <LinearLayout 
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button 
            android:id="@+id/btn_mode"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_audio_normal_mode_selector"/>
        <Button 
            android:id="@+id/btn_pre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_audio_pre_selector"/>
        <Button 
            android:id="@+id/btn_play_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_audio_play_selector"/>
        <Button 
            android:id="@+id/btn_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_audio_next_selector"/>
        <Button 
            android:id="@+id/btn_lyric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_audio_lyric_selector"/>
    </LinearLayout>

</LinearLayout>
</RelativeLayout>
